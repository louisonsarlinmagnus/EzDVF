

@page
@model IndexModel
@{
ViewData["Title"] = "Accueil";
}

<head>
    <link rel="stylesheet" href="~/css/index.css" />
</head>

<body>
    <div class="title">Demandes de Valeur Foncière Faciles</div>

    <form method="post" >
        <fieldset>
          <div>
            <label for="criteria-name">Rechercher:</label>
            <input type="text" class="criteria-name" name="criteria-name" value="" />
          </div>

          <div>
            <input type="submit" value="Submit" class="submit" />
          </div>
        </fieldset>
    </form>


    @{
        if (ViewContext.HttpContext.Request.Method == "POST") {
            string criterianame = Request.Form["criteria-name"];

            <text>
            You entered: <br />
            Criteria Name: @criterianame <br />
            </text>
        }
    }


    <hr class="transition">

    <div class="help-preview">
        <body>
            <br>
            <br>
            <h2>Utilisation</h2>
            <h4 id="formattage">Formattage:</h4>
            <p>Il suffit de taper a la suite un mot clé suivi de sa valeur.<br>
                Dans le cas de plusieurs mots clées, les spéparer d'un <b>&</b>.
            </p>
            <br>
            <br>
            <h4 id="mots-cle">Mots clés:</h4>
            <table class="tableau">
                <thead>
                    <tr>
                        <th>Mot clé</th>
                        <th>Description</th>
                        <th>Exemple de valeur</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>code_commune</td>
                        <td>code INSEE de la commune</td>
                        <td>94068</td>
                    </tr>
                    <tr>
                        <td>section</td>
                        <td>section cadastrale</td>
                        <td>94068000CQ</td>
                    </tr>
                    <tr>
                        <td>numero_plan</td>
                        <td>identifiant de la parcelle</td>
                        <td>94068000CQ0110</td>
                    </tr>
                    <tr>
                        <td>code_postal</td>
                        <td>code postal</td>
                        <td>83200</td>
                    </tr>
                </tbody>
            </table>
            <br>
            <h4 id="exemples">Exemples:</h4>
            <ul>
                <li>code_commune=94068</li>
                <li>section=94068000CQ</li>
                <li>numero_plan=94068000CQ0110</li>
                <li>lat=48.85&amp;lon=2.35</li>
                <li>lat=48.85&amp;lon=2.35&amp;dist=200</li>
                <li>code_postal=89110&amp;type_local=Maison</li>
            </ul>
        </body>
    </div>
</body>